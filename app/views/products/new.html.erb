<h1>Products#new</h1>

<form action="/products" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<label for="name">Product Name</label>
	<input type="text" id="name" name="product[name]">
	
	<label for="description">Description</label>
	<input type="text" id="description" name="product[description]">
	
	<label for="pricing">Price</label>
	<input type="text" id="pricing" name="product[pricing]">

	<label for="category">Category</label>
	<%= select_tag 'product[category_id]', options_for_select(@categories.collect{ |c| [c.name, c.id] }) %>

	<input type="submit" value="Create">
</form>
<a href="/products">Back</a>

<% if !flash.empty? %>
	<% flash[:errors].each do |e| %>
	<p style="color:red;"><%= e %></p>
	<% end %>
<% end %>